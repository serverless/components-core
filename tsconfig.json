{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    // Type checking for JS files too
    "checkJs": true,
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules"]
}
